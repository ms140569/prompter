{
  "segments": [
    "virtual_env", 
    "username", 
    "hostname", 
    "read_only",
    "ssh", 
    "cwd", 
    "git", 
    "exit_code",
    "root"
  ],
    "theme": "default",
    "hostname": {
        "colorize": false
    },
    "cwd": {
        "max_depth": 5,
        "mode": "expand",
        "max_dir_size": 0,
        "full_cwd": true
    }

}
